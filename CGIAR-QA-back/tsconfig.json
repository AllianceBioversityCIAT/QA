{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "target": "es5",
      "allowJs": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "strict": false,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
         "@controllers/*": [
            "src/controllers/*"
         ],
         "@entity/*": [
            "src/entity/*"
         ],
         "@middleware/*": [
            "src/middlewares/*"
         ],
         "@routes/*": [
            "src/routes/*"
         ],
         "@helpers/*": [
            "src/_helpers/*"
         ],
         "@config/*": [
            "src/config/*"
         ],
      }
   }
}