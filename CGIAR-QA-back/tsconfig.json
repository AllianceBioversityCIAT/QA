{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "target": "es5",
      "allowJs": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "paths": {
         "@controllers/*": [
            "controllers/*"
         ],
         "@entity/*": [
            "entity/*"
         ],
         "@middleware/*": [
            "middlewares/*"
         ],
         "@routes/*": [
            "routes/*"
         ],
         "@helpers/*": [
            "_helpers/*"
         ],
         "@config/*": [
            "config/*"
         ],
      }
   }
}